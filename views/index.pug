extends layout

block content
  h1= title
  p Welcome to #{title}
  ol
  each val in todos
    li
      span.task(data-id=val.id)= val.task 
      span= ' - '
      if val.completed > 0
        span.complete(data-id=val.id data-completed=val.completed) Completed
      else
        span.complete(data-id=val.id data-completed=val.completed) Not Completed
      form(method='POST' action='/delete')
        input(type='hidden', name='id', value=val.id)
        button(type='submit') Delete

  hr
  h2 Add a new task
  form(method='POST' action='/create')
    label(for='task') Task:
    input(type='text', name='task', id='task', required)
    button(type='submit') Create Task